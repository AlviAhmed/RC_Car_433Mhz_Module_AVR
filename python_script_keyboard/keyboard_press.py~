import pynput 
import time

from pynput.keyboard import Key, Listener, Controller



# For detecting and logging key presses
def on_press(key):
 print('{0} released'.format(key))

def on_release(key):
 if key == Key.esc:
   return False

with Listener( on_press = on_press, on_release = on_release ) as listener:
 listener.join()





